<%- include('layout/header') %>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-dismissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          data-bs-dismiss="alert"
          type="button"
          aria-label="close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (users && users.length) { %>
        <table class="table table-striped text-center my-3">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, index) => { %>
            <tr class="align-middle">
              <td><%= index + 1 %></td>
              <td>
                <img src="<%= user.image %>" width="50" class="img-thumbnail" />
              </td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
              <td>
                <a href="/edit/<%= user._id %>" class="text-success">
                  <i class="fas fa-edit fa-lg mx-1"></i>
                </a>
                <a href="/delete/<%= user._id %>" class="text-danger">
                  <i class="fas fa-trash fa-lg mx-1"></i>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary mt-5">No users found in DB</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('layout/footer') %>
